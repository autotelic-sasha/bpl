{
    "configurations": [

        {
            "name": "C/C++: build and debug test runner",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/apps/test_runner_d",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}/build/apps/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ debug build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
